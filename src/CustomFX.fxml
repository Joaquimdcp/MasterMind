<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-image: url(bg.jpg);" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.CustomFXController">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="195.0" layoutY="39.0" text="Custom difficulty">
         <font>
            <Font name="Carter One" size="48.0" />
         </font>
      </Label>
      <Pane layoutX="275.0" layoutY="240.0">
         <children>
            <GridPane>
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <ChoiceBox fx:id="colors" prefWidth="150.0" GridPane.columnIndex="1" />
                  <ChoiceBox fx:id="rounds" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label prefHeight="30.0" prefWidth="200.0" text="Number of colors">
                     <font>
                        <Font name="Carter One" size="18.0" />
                     </font>
                  </Label>
                  <Label prefWidth="200.0" text="Number of rounds" GridPane.rowIndex="1">
                     <font>
                        <Font name="Carter One" size="18.0" />
                     </font>
                  </Label>
               </children>
            </GridPane>
         </children>
      </Pane>
      <Button layoutX="360.0" layoutY="411.0" mnemonicParsing="false" onAction="#showDifficulty" text="Back">
         <font>
            <Font name="Carter One" size="18.0" />
         </font>
      </Button>
      <Button layoutX="332.0" layoutY="337.0" mnemonicParsing="false" text="Start Game">
         <font>
            <Font name="Carter One" size="18.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
