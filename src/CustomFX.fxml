<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-image: url(bg.jpg);" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.CustomFXController">
   <children>
      <ImageView layoutX="148.0" layoutY="30.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../difficultytitle.png" />
         </image>
      </ImageView>
      <VBox alignment="CENTER" layoutX="200.0" layoutY="179.0" prefWidth="400.0" spacing="50.0">
         <children>
            <GridPane>
              <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <ChoiceBox fx:id="colors" prefWidth="50.0" GridPane.columnIndex="1" />
                  <ChoiceBox fx:id="rounds" prefWidth="50.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label prefHeight="30.0" text="Number of colors">
                     <font>
                        <Font name="Carter One" size="18.0" />
                     </font>
                  </Label>
                  <Label text="Number of rounds" GridPane.rowIndex="1">
                     <font>
                        <Font name="Carter One" size="18.0" />
                     </font>
                  </Label>
               </children>
            </GridPane>
            <Button mnemonicParsing="false" prefHeight="69.0" prefWidth="210.0" style="-fx-background-image: url(startgame.png); -fx-border-color: transparent; -fx-border-width: 0; -fx-background-radius: 0; -fx-background-color: transparent;">
               <font>
                  <Font name="Carter One" size="18.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#showDifficulty" prefHeight="69.0" prefWidth="210.0" style="-fx-background-image: url(back.png); -fx-border-color: transparent; -fx-border-width: 0; -fx-background-radius: 0; -fx-background-color: transparent;">
               <font>
                  <Font name="Carter One" size="18.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
